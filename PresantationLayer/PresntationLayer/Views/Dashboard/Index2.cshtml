<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Google Charts Example</title>

    <!-- Google Charts API -->
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawCharts);

        function drawCharts() {
            // Çubuk Grafiği (Bar Chart)
            var barData = google.visualization.arrayToDataTable([
                ['Category', 'Target', { role: 'style' }],
                ['Product returned to nature', 12, 'color: #017ebf'],
               

            ]);

            var barOptions = {
                title: 'Nature Protection Target',
                legend: { position: 'none' },
                bars: 'vertical',
                bar: { groupWidth: '75%' },
                colors: ['#3366cc', '#dc3912', '#ff9900', '#109618', '#990099']
            };

            var barChart = new google.visualization.BarChart(document.getElementById('barchart'));
            barChart.draw(barData, barOptions);



            // Pasta Grafiği (Pie Chart)
            var pieData = google.visualization.arrayToDataTable([
                ['Task', 'Hours per Day'],
                ['Soil Pollution', 8],
                ['Water Pollution', 8],
                ['Air Pollution', 4],
                ['Biodiversity Decline:', 2],
                ['Climate Change', 2]
            ]);

            var pieOptions = {
                title: 'Your benefits to environmental problems',
                pieHole: 0.4, // Boşluk oranı
            };

            var pieChart = new google.visualization.PieChart(document.getElementById('piechart'));
            pieChart.draw(pieData, pieOptions);

            // Toprak Kirliliği Çubuk Grafiği (Soil Pollution Bar Chart)
            var soilPollutionBarData = google.visualization.arrayToDataTable([
                ['Category', 'Target', { role: 'style' }],
                ['Soil Pollution', pieData.getValue(1, 1) , 'color: #017ebf'],
            ]);

            var soilPollutionBarOptions = {
                title: 'Soil Pollution Target',
                legend: { position: 'none' },
                bars: 'vertical',
                bar: { groupWidth: '75%' },
                colors: ['#3366cc', '#dc3912', '#ff9900', '#109618', '#990099']
            };

            var soilPollutionBarChart = new google.visualization.BarChart(document.getElementById('soilPollutionBarChart'));
            soilPollutionBarChart.draw(soilPollutionBarData, soilPollutionBarOptions);


            // Su Kirliliği Çubuk Grafiği (Water Pollution Bar Chart)
            var waterPollutionBarData = google.visualization.arrayToDataTable([
                ['Category', 'Target', { role: 'style' }],
                ['Water Pollution', pieData.getValue(2, 1), 'color: #017ebf'],
            ]);

            var waterPollutionBarOptions = {
                title: 'Water Pollution Target',
                legend: { position: 'none' },
                bars: 'vertical',
                bar: { groupWidth: '75%' },
                colors: ['#3366cc', '#dc3912', '#ff9900', '#109618', '#990099']
            };

            var waterPollutionBarChart = new google.visualization.BarChart(document.getElementById('waterPollutionBarChart'));
            waterPollutionBarChart.draw(waterPollutionBarData, waterPollutionBarOptions);


            // Hava Kirliliği Çubuk Grafiği (Air Pollution Bar Chart)
            var airPollutionBarData = google.visualization.arrayToDataTable([
                ['Category', 'Target', { role: 'style' }],
                ['Air Pollution', pieData.getValue(3, 1), 'color: #017ebf'],
            ]);

            var airPollutionBarOptions = {
                title: 'Air Pollution Target',
                legend: { position: 'none' },
                bars: 'vertical',
                bar: { groupWidth: '75%' },
                colors: ['#3366cc', '#dc3912', '#ff9900', '#109618', '#990099']
            };

            var airPollutionBarChart = new google.visualization.BarChart(document.getElementById('airPollutionBarChart'));
            airPollutionBarChart.draw(airPollutionBarData, airPollutionBarOptions);


            // Biyoçeşitlilik Azalması Çubuk Grafiği (Biodiversity Decline Bar Chart)
            var biodiversityDeclineBarData = google.visualization.arrayToDataTable([
                ['Category', 'Target', { role: 'style' }],
                ['Biodiversity Decline', pieData.getValue(4, 1), 'color: #017ebf'],
            ]);

            var biodiversityDeclineBarOptions = {
                title: 'Biodiversity Decline Target',
                legend: { position: 'none' },
                bars: 'vertical',
                bar: { groupWidth: '75%' },
                colors: ['#3366cc', '#dc3912', '#ff9900', '#109618', '#990099']
            };

            var biodiversityDeclineBarChart = new google.visualization.BarChart(document.getElementById('biodiversityDeclineBarChart'));
            biodiversityDeclineBarChart.draw(biodiversityDeclineBarData, biodiversityDeclineBarOptions);


            // İklim Değişikliği Çubuk Grafiği (Climate Change Bar Chart)
            var climateChangeBarData = google.visualization.arrayToDataTable([
                ['Category', 'Target', { role: 'style' }],
                ['Climate Change', pieData.getValue(5, 1), 'color: #017ebf'],
            ]);

            var climateChangeBarOptions = {
                title: 'Climate Change Target',
                legend: { position: 'none' },
                bars: 'vertical',
                bar: { groupWidth: '75%' },
                colors: ['#3366cc', '#dc3912', '#ff9900', '#109618', '#990099']
            };

            var climateChangeBarChart = new google.visualization.BarChart(document.getElementById('climateChangeBarChart'));
            climateChangeBarChart.draw(climateChangeBarData, climateChangeBarOptions);
        
       

            // Çizgi Grafiği (Line Chart)
            var lineData = google.visualization.arrayToDataTable([
                ['Month', 'Recycled', 'Waste'],
                ['January', 15, 30],
                ['February', 20, 28],
                ['March', 25, 25],
                ['April', 18, 35],
                ['May', 22, 32]
            ]);

            var lineOptions = {
                title: 'Monthly Recycling Progress',
                curveType: 'function',
                legend: { position: 'bottom' },
            };

            var lineChart = new google.visualization.LineChart(document.getElementById('linechart'));
            lineChart.draw(lineData, lineOptions);
        }
    </script>
</head>
<body>
    <div id="barchart" style="width: 100%; height: 200px;"></div>
    <div class="alert alert-success"> Congratulations, you will contribute 12% to nature this year. Keep it up. </div>

    <div id="piechart" style="width: 100%; height: 300px;"></div>
