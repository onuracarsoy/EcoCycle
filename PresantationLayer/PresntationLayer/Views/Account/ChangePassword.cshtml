@using DtoLayer.Dtos.AppUserDtos
@model AppUserChangePasswordDto
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Change Password</h5>
            </div>
            <div class="ibox-content">
                @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
                {
                
                    @Html.TextBoxFor(x => x.OldPassword, new { @class = "form-control", @placeholder = "Old Password" ,@type="password"})
                    <p style="color:red">@Html.ValidationMessageFor(x => x.OldPassword) </p>
                    <p style="color:red">@ViewBag.isOldPasswordCorrect </p>
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @placeholder = "New Password", @type = "password" })
                    <p style="color:red">@Html.ValidationMessageFor(x => x.Password) </p>

                    @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm New Password", @type = "password" })
                    <p style="color:red">@Html.ValidationMessageFor(x => x.ConfirmPassword) </p>



                    <button type="submit" class="btn btn-warning">Update & Save</button>
                }

            </div>
        </div>
    </div>
</div>

