@using DtoLayer.Dtos.AppUserDtos
@model AppUserLoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>EcoCycle | Login</title>

    <link href="~/admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admin/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/admin/css/animate.css" rel="stylesheet">
    <link href="~/admin/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="loginColumns animated fadeInDown">
        <div class="row">

            <div class="col-md-6">
                <h2 class="font-bold">Welcome to <a href="/Home/Index" style="color:green">EcoCycle</a></h2>

                <p>
                    Welcome! Please log in to access your account and continue your journey towards sustainable industrial practices with Eco Cycle. If you don't have an account yet, sign up to be part of the sustainable revolution.
                </p>


            </div>
            <div class="col-md-6">
                <div class="ibox-content">
                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                    {
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email" })
                        <p style="color:red">@Html.ValidationMessageFor(x => x.Email) </p>
                 
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @placeholder = "Password", @type = "password" })
                        <p style="color:red">@Html.ValidationMessageFor(x => x.Password) </p>
                        <p style="color:red">@ViewBag.Wrong1 </p>

                     
                        
                        <button type="submit" class="btn btn-primary block full-width m-b">Login</button>
                        
                        <br />

                    }

                    <small style="color:blue">  Did you forget your password? </small>
                    <a class="btn btn-sm btn-white btn-block" href="/Register/Index">Reset your password</a>
                    <br/>
                    <small style="color:blue">  Don't have an account? </small>
                    <a class="btn btn-sm btn-white btn-block" href="/Register/Index">Create an account</a>
                   

                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-6">
                Copyright EcoCycle
            </div>
            <div class="col-md-6 text-right">
                <small>© 2024</small>
            </div>
        </div>
    </div>

</body>

</html>
